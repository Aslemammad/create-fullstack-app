{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "concurrently \"npm run build\" \"cross-env NODE_ENV=production node build/app.js\"",
    "dev": "concurrently -k -n \"TypeScript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"cross-env NODE_ENV=development nodemon build/app.js\"",
    "format": "standardx \"./src/**/*.ts\" --fix | snazzy || true",
    "standard-check": "standardx \"./src/**/*.ts\" --verbose | snazzy || true"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "express-http-to-https": "^1.1.4",
    "express-validator": "^6.6.0",
    "helmet": "^3.23.3",
    "morgan": "^1.10.0",
    "mysql2": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.3.3",
    "sequelize-typescript": "^1.1.0",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/express-fileupload": "^1.1.3",
    "@types/helmet": "0.0.47",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.25",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4",
    "snazzy": "^8.0.0",
    "standardx": "^5.0.0",
    "typescript": "^3.9.7"
  }
}
